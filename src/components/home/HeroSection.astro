---
import { ArrowRight, Github, Zap } from "lucide-astro";
import Button from "../Button.astro";
---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden pt-16">
  {/* Background Effects */}
  <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_top,hsl(var(--thunder-yellow)/0.08)_0%,transparent_50%)]" />
  <div class="absolute top-1/4 left-1/2 -translate-x-1/2 w-[800px] h-[400px] bg-[radial-gradient(ellipse_at_center,hsl(var(--thunder-yellow)/0.1)_0%,transparent_70%)] blur-3xl" />
  
  {/* Grid Pattern */}
  <div class="absolute inset-0 bg-[linear-gradient(hsl(var(--border)/0.3)_1px,transparent_1px),linear-gradient(90deg,hsl(var(--border)/0.3)_1px,transparent_1px)] bg-[size:64px_64px] [mask-image:radial-gradient(ellipse_at_center,black_30%,transparent_70%)]" />

  <div class="container relative mx-auto px-4 py-24">
    <div class="max-w-4xl mx-auto text-center">
      {/* Badge */}
      <div class="inline-flex items-center gap-2 rounded-full border border-border bg-secondary/50 px-4 py-1.5 text-sm text-muted-foreground mb-8 animate-fade-in">
        <Zap class="h-4 w-4 text-primary" />
        <span>Made for modern web developers</span>
      </div>

      {/* Headline */}
      <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold tracking-tight text-foreground mb-6 animate-fade-in-up">
        Deploy to{" "}
        <span class="text-primary">your AWS</span>
        <br />
        account with lightning speed
      </h1>

      {/* Subheadline */}
      <p class="text-lg sm:text-xl text-muted-foreground max-w-2xl mx-auto mb-10 animate-fade-in-up" style="animation-delay: 0.1s">
        Thunder is a PaaS that deploys to your AWS account. 
        <br />Open source. Awesome DX. Zero vendor lock-in. Full control.
      </p>

      {/* CTAs */}
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center animate-fade-in-up" style="animation-delay: 0.2s">
        <Button variant="hero" size="xl" href="/signup">
          Get Started Free
          <ArrowRight class="h-5 w-5 ml-2" />
        </Button>
        <Button variant="hero-outline" size="xl" href="https://github.com/thunder-so" target="_blank" rel="noopener noreferrer">
          <Github class="h-5 w-5 mr-2" />
          View on GitHub
        </Button>
      </div>

      {/* Trust Signals */}
      <div class="mt-16 animate-fade-in-up" style="animation-delay: 0.3s">
        <p class="text-sm text-muted-foreground mb-6">Trusted by developers building on AWS</p>
        <div class="flex flex-wrap justify-center gap-8 opacity-60">
          <div class="text-muted-foreground font-medium">Startups</div>
          <div class="text-muted-foreground font-medium">Agencies</div>
          <div class="text-muted-foreground font-medium">Enterprises</div>
          <div class="text-muted-foreground font-medium">Open Source</div>
        </div>
      </div>
    </div>
  </div>

  {/* Scroll Indicator */}
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
    <div class="w-6 h-10 rounded-full border-2 border-border flex items-start justify-center p-2">
      <div class="w-1.5 h-2.5 rounded-full bg-primary animate-pulse" />
    </div>
  </div>
</section>
