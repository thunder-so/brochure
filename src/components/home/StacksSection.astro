---
import { Box, Cloud, Server, ArrowRight } from "lucide-astro";
import Button from "../Button.astro";

const stacks = [
  {
    icon: Box,
    name: "SPA Stack",
    services: "S3 + CloudFront",
    description: "Perfect for React, Vue, and static sites. Global CDN with edge caching.",
    color: "text-blue-400",
    bgColor: "bg-blue-400/10",
  },
  {
    icon: Cloud,
    name: "Functions Stack",
    services: "Lambda + API Gateway",
    description: "Serverless APIs and backends. Scale to zero, pay for what you use.",
    color: "text-emerald-400",
    bgColor: "bg-emerald-400/10",
  },
  {
    icon: Server,
    name: "Web Service Stack",
    services: "Fargate + ALB",
    description: "Containerized applications. Full control over runtime and resources.",
    color: "text-purple-400",
    bgColor: "bg-purple-400/10",
  },
];
---

<section class="py-24 bg-card/50">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-3xl sm:text-4xl font-bold text-foreground mb-4">
        Choose your stack
      </h2>
      <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
        Three battle-tested architectures for any use case. All running on standard AWS services.
      </p>
    </div>

    <div class="grid lg:grid-cols-3 gap-8 mb-12">
      {stacks.map((stack) => (
        <div
          class="relative rounded-2xl border border-border bg-background p-8 hover:border-primary/30 transition-all duration-300"
        >
          <div class={`inline-flex items-center justify-center w-14 h-14 rounded-2xl ${stack.bgColor} ${stack.color} mb-6`}>
            <stack.icon class="h-7 w-7" />
          </div>
          <h3 class="text-2xl font-bold text-foreground mb-2">{stack.name}</h3>
          <p class="text-sm font-mono text-muted-foreground mb-4">{stack.services}</p>
          <p class="text-muted-foreground">{stack.description}</p>
        </div>
      ))}
    </div>

    <div class="text-center">
      <Button variant="outline" size="lg" href="/product/stacks">
        Explore all stacks
        <ArrowRight class="h-4 w-4 ml-2" />
      </Button>
    </div>
  </div>
</section>
