---
import { Box, Cloud, Server, ArrowRight } from "lucide-astro";
import { Icon } from 'astro-icon/components';
import Button from "../Button.astro";

const patterns = [
  {
    icon: 'tabler:file',
    name: "Single Page Application",
    services: "S3 + CloudFront",
    description: "Perfect for React, Vue, and static sites. Global CDN with edge caching.",
    color: "text-blue-400",
    bgColor: "bg-blue-400/10",
    link: '/docs/patterns/s3-cloudfront',
  },
  {
    icon: 'tabler:lambda',
    name: "Serverless Function",
    services: "Lambda + API Gateway",
    description: "Serverless APIs and backends. Scale to zero, pay for what you use.",
    color: "text-emerald-400",
    bgColor: "bg-emerald-400/10",
    link: '/docs/patterns/lambda-apigateway',
  },
  {
    icon: 'tabler:server', 
    name: "Web Service",
    services: "Fargate + ALB",
    description: "Containerized applications. Full control over runtime and resources.",
    color: "text-purple-400",
    bgColor: "bg-purple-400/10",
    link: '/docs/patterns/fargate-alb',
  },
];
---

<!-- Patterns Overview -->
<section class="py-24">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-3xl sm:text-4xl font-bold text-foreground mb-4">
        Three patterns, infinite possibilities
      </h2>
    </div>

    <div class="grid lg:grid-cols-3 gap-8 max-w-5xl mx-auto">
      {patterns.map((pattern) => {
        return (
          <a href={pattern.link} class="rounded-2xl border border-border bg-card p-8 hover:border-primary/30 transition-all duration-300 block">
            <Icon name={pattern.icon} class={`h-10 w-10 ${pattern.color} mb-4`} />
            <h3 class="text-2xl font-bold text-foreground mb-2">{pattern.name}</h3>
            <p class="text-sm font-mono text-muted-foreground mb-4">{pattern.services}</p>
            <p class="text-muted-foreground">
              {pattern.description}
            </p>
          </a>
        );
      })}
    </div>

    <div class="text-center mt-12">
      <Button variant="outline" size="lg" href="/docs/patterns">
        Explore all patterns
        <ArrowRight class="h-4 w-4 ml-2" />
      </Button>
    </div>
  </div>
</section>
