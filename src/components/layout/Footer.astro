---
import { Github, Twitter } from "lucide-astro";

const footerLinks = {
  product: [
    { name: "Patterns", href: "/docs/patterns" },
    { name: "Console", href: "/platform" },
    { name: "Frameworks", href: "/docs/frameworks" },
    { name: "Security", href: "/docs/security" },
  ],
  company: [
    { name: "About", href: "/about" },
    { name: "Blog", href: "/blog" },
    { name: "Open Source", href: "https://github.com/thunder-so", external: true },
    { name: "Careers", href: "/careers" },
  ],
  resources: [
    { name: "Documentation", href: "/docs" },
    { name: "Changelog", href: "/changelog" },
    { name: "Community", href: "/community" },
    { name: "Support", href: "/support" },
  ],
  legal: [
    { name: "Terms of Service", href: "/terms" },
    { name: "Privacy Policy", href: "/privacy" },
    { name: "Security", href: "/security" },
    { name: "Status", href: "/status" },
  ],
};
---

<footer class="border-t border-border bg-card">
  <div class="container mx-auto px-4 py-16">
    <div class="grid grid-cols-2 md:grid-cols-5 gap-8">
      {/* Brand */}
      <div class="col-span-2 md:col-span-1">
        <a href="/" class="flex items-center gap-2 mb-4">
          <img src="/images/thunder.svg" alt="Thunder" class="h-8 w-8 rounded-lg" />
          <span class="text-lg font-bold text-foreground">Thunder</span>
        </a>
        <p class="text-sm text-muted-foreground mb-6">
          Open-source PaaS for AWS
        </p>
        <div class="flex gap-4">
          <a
            href="https://github.com/thunder-so"
            target="_blank"
            rel="noopener noreferrer"
            class="text-muted-foreground hover:text-foreground transition-colors"
          >
            <Github class="h-5 w-5" />
          </a>
          <a
            href="https://twitter.com/thunderdotso"
            target="_blank"
            rel="noopener noreferrer"
            class="text-muted-foreground hover:text-foreground transition-colors"
          >
            <Twitter class="h-5 w-5" />
          </a>
          <a
            href="https://discord.gg/uNbrp6QYZ6"
            target="_blank"
            rel="noopener noreferrer"
            class="text-muted-foreground hover:text-foreground transition-colors"
          >
            <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0 12.64 12.64 0 0 0-.617-1.25.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057 19.9 19.9 0 0 0 5.993 3.03.078.078 0 0 0 .084-.028 14.09 14.09 0 0 0 1.226-1.994.076.076 0 0 0-.041-.106 13.107 13.107 0 0 1-1.872-.892.077.077 0 0 1-.008-.128 10.2 10.2 0 0 0 .372-.292.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127 12.299 12.299 0 0 1-1.873.892.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028 19.839 19.839 0 0 0 6.002-3.03.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.956-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.955-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.946 2.418-2.157 2.418z"/>
            </svg>
          </a>
        </div>
      </div>

      {/* Links Columns */}
      <div>
        <h4 class="font-semibold text-foreground mb-4">Product</h4>
        <ul class="space-y-3">
          {footerLinks.product.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-sm text-muted-foreground hover:text-foreground transition-colors"
              >
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <div>
        <h4 class="font-semibold text-foreground mb-4">Company</h4>
        <ul class="space-y-3">
          {footerLinks.company.map((link) => (
            <li>
              <a
                href={link.href}
                target={link.external ? "_blank" : undefined}
                rel={link.external ? "noopener noreferrer" : undefined}
                class="text-sm text-muted-foreground hover:text-foreground transition-colors"
              >
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <div>
        <h4 class="font-semibold text-foreground mb-4">Resources</h4>
        <ul class="space-y-3">
          {footerLinks.resources.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-sm text-muted-foreground hover:text-foreground transition-colors"
              >
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <div>
        <h4 class="font-semibold text-foreground mb-4">Legal</h4>
        <ul class="space-y-3">
          {footerLinks.legal.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-sm text-muted-foreground hover:text-foreground transition-colors"
              >
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <div class="mt-12 pt-8 border-t border-border flex flex-col md:flex-row justify-between items-center gap-4">
      <p class="text-sm text-muted-foreground">
        © 2026 Thunder. Made with ♥ on AWS
      </p>
      <p class="text-sm text-muted-foreground">
        Open-source. No vendor lock-in.
      </p>
    </div>
  </div>
</footer>