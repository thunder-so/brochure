---
import Brand from './Brand.astro';
---

<footer class="footer">
  <div class="container">
    <div class="grid grid-cols-4">
      <div class="product">
        <h3>Product</h3>
        <ul>
          <li><a href="/docs/">Documentation</a></li>
          <li><a href="/blog/">Developer Blog</a></li>
        </ul>
      </div>

      <div class="company">
        <h3>Company</h3>
        <ul>
          <li><a href="https://wellfound.com/company/cloudbits/jobs">Careers</a></li>
        </ul>
      </div>

      <div class="community">
        <h3>Community</h3>
        <ul>
          <li><a href="https://discord.gg/nZwr6c5c6v">
            Discord
          </a></li>
          <li><a href="https://github.com/thunder-so/">
            Github
          </a></li>
          <li><a href="https://twitter.com/_thunderso">
            Twitter / X
          </a></li>
        </ul>
      </div>

      <div class="footer-meta">
        <Brand />
        <p class="message mb-2"></p>
        <p>CloudBits, Inc.
          <br />651 N Broad St STE 206, 
          <br />Middletown, DE 19709
          <br /><a href="mailto:support@thunder.so">support@thunder.so</a>
        </p>
      </div>
    </div>  
    
    <div class="legal mt-2">
      <p>
        <span><a href="/legal/privacy">Privacy Policy</a></span>
        <span><a href="/legal/terms">Terms &amp; Conditions</a></span>
      </p>
    </div>
  </div>
</footer>

<style>
.footer {
  margin: 40px 0 0 0;
  padding: 40px 0;
  border-top: 1px solid var(--border);
  line-height: 24px;
  font-size: 14px;
  font-weight: 500;
  color: var(--text-highlight);
  background-color: var(--bg);
}

h3 {
  margin-bottom: 0.5rem;
}

ul li {
  margin-bottom: 0.25rem;
}

span.icon {
  display: inline-block;
}

.legal {
  font-size: 13px;
  display: block;
  text-align: center;
}

.legal span {
  display: inline-block;
  margin-right: 0.5rem;
}
</style>
