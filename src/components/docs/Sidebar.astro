---
import { sidebar } from '../../content/config'

type Props = {
  currentPage: string
}

const { currentPage } = Astro.props
const currentPageMatch = currentPage.endsWith('/')
  ? currentPage.slice(1, -1)
  : currentPage.slice(1);

// console.log("Astro.site", Astro);
// console.log("currentPage", currentPage);

---

<nav aria-labelledby="grid-left">
  <ul class="nav-groups">
    {
      Object.entries(sidebar).map(([header, children]) => (
        <li>
          <div class="nav-group">
            <h2>{header}</h2>
            <ul>
              {children.map((child) => {
                const url = `/${child.link}`
                return (
                  <li class="nav-link">
                    <a
                      href={url}
                      class={currentPageMatch === child.link ? 'current' : ''}
                    >
                      {child.text}
                    </a>
                  </li>
                )
              })}
            </ul>
          </div>
        </li>
      ))
    }
  </ul>
</nav>

<style>
  nav {
    width: 100%;
    margin-right: 1rem;
    padding: 1rem 0 2rem 1rem;
  }

  .nav-groups {
    height: 100%;
    padding: 2rem 0;
    overflow-x: visible;
    overflow-y: auto;
    max-height: 100vh;
  }

  .nav-groups h2 {
    font-size: 1rem;
    color: var(--text-highlight);
  }

  .nav-groups > li + li {
    margin-top: 1rem;
  }

  .nav-groups > :first-child {
    padding-top: var(--doc-padding);
  }

  .nav-groups > :last-child {
    padding-bottom: 2rem;
    margin-bottom: var(--theme-navbar-height);
  }

  /* .nav-group-title {
    font-size: 1rem;
    font-weight: bold;
    padding: 0.1rem 1rem;
    text-transform: uppercase;
    margin-bottom: 0.5rem;
  } */

  .nav-link a {
    font-size: 1rem;
    padding: 0.3rem 0;
    text-decoration: none;
    display: inline-block;
  }

  .nav-link a:hover,
  .nav-link a:focus {
    background-color: var(--theme-bg-hover);
  }

  .nav-link a.current {
    color: var(--brand-2);
    font-weight: 600;
  }

  @media (min-width: 50em) {
    .nav-groups {
      padding: 0;
    }
  }
</style>