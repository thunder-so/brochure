---
import { SEO } from "astro-seo";
import Snippets from "../components/Snippets.astro";
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import "../styles/main.scss";

interface Props {
	title: string;
}
const { title } = Astro.props;

const makeTitle = title
  ? title + " | " + "Thunder"
  : "Thunder - Deploy Apps on AWS like a Pro";

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();

const resolvedImageWithDomain = new URL(
  "./opengraph.jpg", Astro.site
).toString();
---

<!doctype html>
<html lang="en">
	<head>
		<Snippets />
		<meta charset="UTF-8" />
		<title>{makeTitle}</title>

		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/thunder.svg" />

		<SEO
			title={makeTitle}
			description=""
			canonical={canonicalURL}
			twitter={{
				title: makeTitle,
				site: "@_thunderso",
				card: "summary_large_image",
			}}
			openGraph={{
				basic: {
					url: canonicalURL,
					type: "website",
					title: makeTitle,
					image: resolvedImageWithDomain,
				},
				image: {
					alt: makeTitle,
				},
			}}
		/>
	</head>
	<body>
		<!-- Google Tag Manager (noscript) -->
		<noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-WJGN6NJ"
			height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
		<!-- End Google Tag Manager (noscript) -->
		
		<Navigation />
		<slot />
		<Footer />

		<style is:global>
			/* Improve Page speed */
			/* https://css-tricks.com/almanac/properties/c/content-visibility/ */
			img {
			  content-visibility: auto;
			}
		</style>
	</body>
</html>