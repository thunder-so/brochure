---
import type { MarkdownHeading } from 'astro'
import { SEO } from "astro-seo";
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import Markdown from '../components/docs/Markdown.astro';
import "../styles/main.scss";
import "../styles/docs.scss";

interface Props {
	title: string;
	headings: MarkdownHeading[];
}

const { title, headings, ...data } = Astro.props

const makeTitle = title
  ? title + " | " + "Thunder"
  : "Thunder - Deploy Apps on AWS like a Pro";

const currentPage = Astro.url.pathname;

---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		
		<title>{makeTitle}</title>

		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/thunder.svg" />
		<meta name="generator" content={Astro.generator} />
	</head>
	<body>
		<Navigation />
		
		<main class="layout">
            <Markdown title={title} headings={headings}>
            <slot />
            </Markdown>
		</main>

        <Footer />

		<style is:global>
			/* Improve Page speed */
			/* https://css-tricks.com/almanac/properties/c/content-visibility/ */
			img {
			  content-visibility: auto;
			}
		</style>
	</body>
</html>

<style>
main.layout {
  margin-top: 64px;
}
</style>