---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';
import { Calendar, ArrowRight } from "lucide-astro";

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

export const prerender = true;
---

<BaseLayout title="Blog">
  <main class="pt-24">
    <section class="py-24">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <div class="text-center mb-16">
            <h1 class="text-4xl sm:text-5xl font-bold text-foreground mb-4">
              Blog
            </h1>
            <p class="text-lg text-muted-foreground">
              Tutorials, updates, and stories from the Thunder team.
            </p>
          </div>

          <div class="space-y-8">
            {posts.map((post) => (
              <article class="group rounded-2xl border border-border bg-card p-8 hover:border-primary/50 transition-all">
                <div class="flex items-center gap-3 text-sm text-muted-foreground mb-4">
                  <span class="flex items-center gap-1">
                    <Calendar class="h-4 w-4" />
                    <FormattedDate date={post.data.pubDate} />
                  </span>
                </div>
                
                <a href={`/blog/${post.slug}/`}>
                  <h2 class="text-2xl font-bold text-foreground mb-3 group-hover:text-primary transition-colors">
                    {post.data.title}
                  </h2>
                </a>
                
                <p class="text-muted-foreground mb-4">{post.data.description}</p>
                
                <a href={`/blog/${post.slug}/`} class="inline-flex items-center gap-2 text-primary font-medium hover:gap-3 transition-all">
                  Read more <ArrowRight class="h-4 w-4" />
                </a>
              </article>
            ))}
          </div>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>