---
import BaseLayout from '../layouts/BaseLayout.astro';
import Button from '../components/Button.astro';
import Frameworks from '../components/Frameworks.astro';
---

<BaseLayout title="">
	<section class="hero">
		<div class="container">
		  <div class="focus">
			<slot name="home-hero-info">
			  <h1 class="name">
				<span  class="text">The Platform for Web Artisans</span>
			  </h1>
			  <p class="tagline">Thunder is the deployment platform for web developers on AWS.</p>
			</slot>
	
			<div class="actions">
				<Button size="md" variant="primary">Sign Up with Github</Button>
				<Button size="md" variant="outline">View Demo</Button>
			</div>
		  </div>	
		</div>
	</section>

  <section class="segment frameworks">
    <div class="container">
        <div class="focus">
            <h3>Deploy your next project on AWS (easily)</h3>
            <p>Get setup in 2 minutes with seamless CI/CD with your Github repository.</p>
        </div>
        <Frameworks />
    </div>
  </section>

  <section class="segment hallmarks">
    <div class="container">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-4">
          <article class="hallmark">
            <h3>Single Page Applications (SPA)</h3>
            <p>Server pre-rendered pages stored in S3 <br />and served from CloudFront</p>
            <img src="/SPA.png" alt="Single Page Applications" class="mx-auto w-full h-auto">
          </article>
          <article class="hallmark">
            <h3>Seamless GitOps</h3>
            <p>Push to production and rebuild CDN cache <br />directly from git</p>
            <img src="/GitOps.png" alt="GitOps" class="mx-auto w-full h-auto">
          </article>
        </div>
    </div>
  </section>
  
