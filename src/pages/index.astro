<style>
.hero {
  margin-top: 65px;
  padding: 72px 0;
}

@media (min-width: 640px) {
  .hero {
    padding: 128px 0;
  }
}

@media (min-width: 960px) {
  .hero {
    padding: 228px 0 164px;
  }
}

.name {
  letter-spacing: -0.4px;
  font-size: 24px;
  line-height: 36px;
  font-weight: 700;
  white-space: pre-wrap;
  text-align: center;
}

span.text {
  color: #FFF;
}

@media (min-width: 640px) {
  .name {
    font-size: 28px;
    line-height: 42px;
  }
}

@media (min-width: 960px) {
  .name {
    font-size: 32px;
    line-height: 48px;
  }
}

.tagline {
  padding-top: 8px;
  font-size: 18px;
  line-height: 28px;
  font-weight: 400;
  white-space: pre-wrap;
  color: var(--vp-c-text-2);
  text-align: center;
}

@media (min-width: 640px) {
  .tagline {
    font-size: 20px;
    line-height: 32px;
  }
}

@media (min-width: 960px) {
  .tagline {
    font-size: 20px;
    line-height: 32px;
  }
}

.actions {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  gap: 16px;
  padding-top: 24px;

}

.action {
  display: inline-block;
}

article.hallmark {
  display: block;
  border: 1px solid var(--border);
  height: 100%;
  transition: border-color 0.25s, background-color 0.25s;
  display: flex;
  flex-direction: column;
  padding: 24px;
}

article.hallmark h3 {
  margin-bottom: 0.5rem;
}

article.hallmark p {
  font-size: 24px;
  line-height: 1.4;
  font-weight: 400;
  margin-bottom: 2rem;
  color: var(--text-highlight);
}

article.hallmark img {
  max-width: 540px;
}

</style>
